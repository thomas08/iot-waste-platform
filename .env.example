# ===========================================
# IoT Waste Management Platform - Environment Variables
# ===========================================
#
# IMPORTANT:
# 1. Copy this file to .env and update with your actual values
# 2. Never commit .env to version control
# 3. Generate strong passwords for production
#
# Quick setup:
#   cp .env.example .env
#   # Edit .env with your values
#
# ===========================================

# ---------------------
# PostgreSQL Database
# ---------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=wastedb
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# ---------------------
# pgAdmin (Database UI)
# ---------------------
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=CHANGE_THIS_PASSWORD
PGADMIN_PORT=5050

# ---------------------
# MQTT Broker
# ---------------------
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WEBSOCKET_PORT=9001
# MQTT Authentication
MQTT_USERNAME=iot_user
MQTT_PASSWORD=CHANGE_THIS_PASSWORD
# MQTT Admin (for management)
MQTT_ADMIN_USERNAME=mqtt_admin
MQTT_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# ---------------------
# API Server (FastAPI)
# ---------------------
API_HOST=0.0.0.0
API_PORT=8000
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
API_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
# JWT token expiry (minutes)
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
# CORS allowed origins (comma-separated, no spaces)
API_CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# ---------------------
# Dashboard Frontend
# ---------------------
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# ---------------------
# IoT Simulator
# ---------------------
# Publish interval in seconds
SIMULATOR_INTERVAL=10
# Number of bins to simulate
SIMULATOR_NUM_BINS=5

# ---------------------
# Application Settings
# ---------------------
# Environment: development, staging, production
ENVIRONMENT=development
# Enable debug logging
DEBUG=true
# Timezone
TZ=Asia/Bangkok

# ---------------------
# Alert Thresholds
# ---------------------
ALERT_FILL_LEVEL_HIGH=75
ALERT_FILL_LEVEL_CRITICAL=90
ALERT_BATTERY_LOW=20
ALERT_TEMPERATURE_HIGH=45

# ---------------------
# Collection Settings
# ---------------------
# Auto-collection threshold (simulator)
COLLECTION_THRESHOLD=85
